<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Xodus DAO -->

  <bean id="litenWebsite.dao.catalogEnvironmentInitializer"
        class="liten.website.service.XodusCatalogEnvironmentInitializer"/>

  <bean id="litenWebsite.dao.catalogEnvironment"
        factory-bean="litenWebsite.dao.catalogEnvironmentInitializer"
        factory-method="getEnvironment"/>

  <bean class="liten.catalog.dao.support.DefaultIseCatalogDao">
    <constructor-arg ref="litenWebsite.dao.catalogEnvironment"/>
  </bean>
</beans>
