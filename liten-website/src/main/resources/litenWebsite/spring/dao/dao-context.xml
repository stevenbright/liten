<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Xodus DAO -->
  <bean id="litenWebsite.dao.catalogEnvironmentInitializer" class="com.truward.xodus.util.init.XodusInitializer">
    <property name="temp" value="${litenWebsite.db.catalog.isTemp}"/>
    <property name="dirName" value="${litenWebsite.db.catalog.dirName}"/>
  </bean>

  <bean id="litenWebsite.dao.catalogEnvironment"
        factory-bean="litenWebsite.dao.catalogEnvironmentInitializer"
        factory-method="getEnvironment"/>

  <bean class="liten.catalog.dao.support.DefaultIseCatalogDao">
    <constructor-arg ref="litenWebsite.dao.catalogEnvironment"/>
  </bean>
</beans>
