{
  "private": true,
  "main": "js/main.js",
  "dependencies": {
    "jquery": "3.2.1",
    "bootstrap": "3.3.7",
    "query-string": "5.0.0"
  },
  "devDependencies": {
    "http-server": "0.10.0",
    "babelify": "7.3.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-jest": "21.2.0",
    "jest-cli": "21.2.1",
    "node-sass": "4.5.3",
    "watchify": "3.9.0",
    "browserify": "14.5.0",
    "uglify-js": "3.1.4"
  },
  "config": {
    "freemarker": "target/release/litenWebsite/web/freemarker",
    "libs": "target/release/litenWebsite/web/static/assets/libs",
    "static_root": "target/release/litenWebsite/web/static",
    "assets": "target/release/litenWebsite/web/static/assets"
  },
  "scripts": {
    "build-js-dev": "browserify js/main.js -t babelify -o $npm_package_config_assets/js/bundle.js",
    "watch-js": "watchify js/main.js -o $npm_package_config_assets/js/bundle.js -v -d -t babelify",
    "build-js": "browserify js/main.js -t babelify | uglifyjs -mc > $npm_package_config_assets/js/bundle.js",
    "build-css": "node-sass --include-path scss scss/main.scss $npm_package_config_assets/css/main.css",
    "watch-css": "node-sass -w --include-path scss scss/main.scss $npm_package_config_assets/css/main.css",
    "watch-all": "npm run watch-js & npm run watch-css",
    "clean": "rm -rf ./target",
    "prepare": "mkdir -p $npm_package_config_assets/js && mkdir -p $npm_package_config_assets/css && mkdir -p $npm_package_config_freemarker && mkdir -p $npm_package_config_libs",
    "copy-freemarker": "cp -r ./freemarker/* $npm_package_config_freemarker",
    "copy-assets": "cp -r ./assets/* $npm_package_config_assets",
    "copy-root": "cp -r ./root/* $npm_package_config_static_root/",
    "copy-bootstrap": "cp -r ./node_modules/bootstrap/dist/ $npm_package_config_libs/bootstrap",
    "copy-all": "npm run copy-freemarker && npm run copy-assets && npm run copy-root && npm run copy-bootstrap",
    "build": "npm run prepare && npm run build-js && npm run build-css && npm run copy-all",
    "postinstall": "npm run build",
    "test": "jest"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "<rootDir>/js"
    ]
  }
}
