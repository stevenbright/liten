<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd

        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
  <context:annotation-config/>
  <context:property-placeholder />

  <bean id="tool.app" class="liten.tool.bm.MigrationRunner" autowire="constructor"/>

  <import resource="classpath:/litenDao/spring/datasource-context.xml"/>
  <import resource="classpath:/litenDao/spring/dao-context.xml"/>
  <import resource="classpath:/litenDao/spring/tx-context.xml"/>

  <import resource="dao/datasource-context.xml"/>
  <import resource="dao/dao-context.xml"/>
  <import resource="dao/tx-context.xml"/>

  <bean id="litenDao.catalogDao" class="liten.catalog.dao.support.DefaultCatalogDao">
    <constructor-arg ref="litenDao.dao.jdbcTemplate"/>
  </bean>

  <bean id="tool.transferService" class="liten.tool.bm.transfer.support.BooklibTransferService">
    <constructor-arg ref="tool.jdbcTemplate"/>
    <constructor-arg ref="litenDao.catalogDao"/>
    <constructor-arg ref="litenDao.catalogDao"/>
  </bean>
</beans>
